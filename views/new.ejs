<%- include('partials/header') %>
<div class="ui main container text segment">
    <div class="huge ui header">NEW BLOG</div>
    <form method="POST" action="/blogs" class="ui form">
        <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" placeholder="Blog Title">
        </div>
        <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]" placeholder="image url">
        </div>
        <div class="field">
            <label>Body</label>
            <textarea name="blog[body]"></textarea>
        </div>
        <button class="ui positive basic button" type="submit">Submit</button>
    </form>
</div>
<%- include('partials/footer') %>