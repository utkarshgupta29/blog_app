<%- include('partials/header') %>
<div class="ui main container text segment">
    <div class="huge ui header">EDIT BLOG</div>
    <form method="POST" action="/blogs/<%=blog._id%>?_method=PUT" class="ui form">
        <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" placeholder="Blog Title" value="<%=blog.title%>">
        </div>
        <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]" placeholder="image url" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label>Body</label>
            <textarea name="blog[body]"><%=blog.body%></textarea>
        </div>
        <button class="ui positive basic button" type="submit">Submit</button>
    </form>
</div>
<%- include('partials/footer') %>