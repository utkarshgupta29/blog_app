<%- include('partials/header')%>
<div class="ui container main text segment">
    <div class="ui huge header">
        <%= blog.title%>
    </div>
    <div class="ui  top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%=blog.image%>" alt="<%=blog.title%>"/>
            <div class="content">
                <span><%= blog.created.toDateString()%></span>
            </div>
            <div class="description">
                <p><%- blog.body%></p>
            </div>
            <a class="ui button secondary small" href="/blogs/<%=blog._id%>/edit">Edit</a>
            <form style="display:inline" method="POST" action="/blogs/<%=blog._id%>?_method=DELETE">
                <button type="submit" class="ui button red small">Delete</button>
            </form>
        </div>
        
    </div>
</div>
<%- include('partials/footer')%>
