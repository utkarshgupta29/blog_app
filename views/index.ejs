<%- include('partials/header') %>


<div class="ui text main container">
    <div class="ui huge header"> BlogApp</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
            <div class="item">
                <div class="image">
                    <img src="<%=blog.image%>" alt="<%=blog.title%>" />
                </div>
                <div class="content">
                        <a href="/blogs/<%=blog._id%>"><%=blog.title%></a>
                        <div class="meta">
                            <span><%=blog.created.toDateString()%></span>
                        </div>
                        <div class="description">
                            <p><%=blog.body.substring(0,100)%>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated button basic violet"href="/blogs/<%=blog._id%>">Read More<i class="right chevron icon"></i></a>
                        </div>
                </div>
            </div>
                
                
                
                
            <% }) %>
        </div>
        
    </div>
</div>

<%- include('partials/footer') %>
